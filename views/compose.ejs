<%- include("partials/header") -%>

<h1>Compose</h1>

<form class="blogForm" action="/compose" method="post">
    <div class="form-group">
        <label for="exampleTitle1">Title</label>
        <input class="form-control" type="text" name="postTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="examplePost1">Post</label>
        <textarea class="form-control" name="postBody" rows="5"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>

